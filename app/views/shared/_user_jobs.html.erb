<div class="row">
  <% @jobs.each do |job| %>
    <div class="col xs12 x6 m4 l3">
      <!-- <div class="card medium"> -->
        <!-- <div class="card-image"> -->
          <!-- <%#= link_to( image_tag(job.image.url(:medium), alt: "Task Image"), task_path(job) ) %> -->
        <!-- </div> -->
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= link_to job.name, job_path(job) %><i class="material-icons right">more_vert</i></span>
          <p><%= job.title %>, <%= job.company %></p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">Job Details<i class="material-icons right">close</i></span>
          <p><%= job.department %></p>
          <span class="start_time_plus_hours">
            Salary: $<%= job.salary %>
          </span>
          <p><%= job.description %></p>
        </div>
        <div class="card-action">
          <% if !(job.pledged? || job.active?) %>
            <p><b>This job is <%= job.status %></b></p>
          <% elsif method == :post %>
            <%= link_to "Favorite", favorites_path(job_id: job.id), method: method %>
          <% else %>
            <%= link_to "Unfavorite", favorites_path(job.id), method: method %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
