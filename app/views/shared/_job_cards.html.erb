<div class="row">
  <% jobs.each do |job| %>
    <div class="children-heading card hoverable animated fadeIn" id="job-snippet">
      <div class="card small">
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= link_to job.title, company_job_path(job.company, job), class:"jobs-title" %><i class="material-icons right">more_vert</i></span>
          <p class="job-title-card"><%= job.company.name %> </p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">
            <p class="snippet-heading">Job Details</p><i class="mfaterial-icons right">x</i>
          </span>
          <span class="job-snippet-details">
            Looking for someone with about <%= job.years_of_experience %> year(s) of experience, with a starting salary of <%= number_to_currency(job.salary) %>.
          </span>
          <p><%= job.description %></p>
        </div>
        <div class="card-action">
          <%= link_to "View opportunity details", company_job_path(job.company, job) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
