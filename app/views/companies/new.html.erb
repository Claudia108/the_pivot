<h8> Give your company the Ziba Lifestyle</h8><br>
<h8> Fill out this form and a Ziba specialist will contact you</h8>

<div class="row">
  <div class="col s6 offset-s3">
<%= form_for @company do |f| %>

  <%= f.text_field :name, placeholder: "Company Name" %>
  <%= f.text_field :logo, placeholder: "Company Logo" %>
  <%= f.text_field :url, placeholder: "Company url" %>
  <%= f.text_field :size, placeholder: "Company Size" %>
  <%= f.text_field :industry, placeholder: "Company Industry" %>
  <%= f.text_field :description, placeholder: "Company Description" %>

  <%= f.fields_for @contact_us do |c| %>
  <%= c.text_field :first_name, placeholder: "First Name" %>
  <%= c.text_field :last_name, placeholder: "Last Name" %>
  <%= c.text_field :email, placeholder: "Email" %>
  <%= c.text_field :phone_number, placeholder: "Phone Number" %>
  <%= c.text_field :description, placeholder: "Describe Your Companies Culture" %>

  <%= f.submit "Submit Application", class:"slider-btn waves-effect waves-light btn" %>
  <% end %>
<% end %>
