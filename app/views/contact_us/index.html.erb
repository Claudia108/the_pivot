<h1 class='dashboard-welcome'>Customer Inquiries</h1>
<h4 class="dashboard-sections left-align">Stats</h4>
<div class="left-align">
    <p id="total-count">Total Inquiries: <%= @contacts.count %></p>
</div>

<h4 class="dashboard-sections left-align">Inquiries Summaries</h4>

    <ul>
      <% @contacts.each do |contact| %>
      <li><%= link_to "#{contact.created_at}: #{contact.description}", customer_inquiry_path(contact)%></li>
      <% end %>
    </ul>

  <div class="center-align">
    <%= will_paginate @contacts %>
  </div>
